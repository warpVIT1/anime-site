// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    // Encrypted email
  emailHash     String    @unique // Hash for lookup
  username      String    // Encrypted username
  usernameHash  String    @unique // Hash for lookup
  passwordHash  String    // Password hash (bcrypt)
  displayName   String?   // Display name (encrypted)
  avatar        String?
  language      String?   @default("en")
  theme         String?   @default("dark")
  notificationSettings String? // JSON string
  privacySettings      String? // JSON string
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  favorites     Favorite[]
  watchlist     Watchlist[]
  watchHistory  WatchHistory[]
  sessions      Session[]
}

model Favorite {
  id           String   @id @default(cuid())
  animeId      Int
  userId       String
  animeTitle   String   @default("")
  animeImage   String   @default("")
  animeScore   Float?
  animeEpisodes Int?
  animeStatus  String?
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, animeId])
}

model Watchlist {
  id           String   @id @default(cuid())
  animeId      Int
  userId       String
  animeTitle   String   @default("")
  animeImage   String   @default("")
  status       String   @default("planned") // watching, completed, planned, on_hold, dropped
  progress     Int      @default(0)
  totalEpisodes Int?
  score        Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, animeId])
}

model WatchHistory {
  id           String   @id @default(cuid())
  animeId      Int
  userId       String
  animeTitle   String   @default("")
  animeImage   String   @default("")
  episode      Int
  progress     Int      @default(0) // percentage watched
  watchedAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, animeId])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
